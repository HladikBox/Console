<?xml version="1.0" encoding="utf-8" ?>
<root>
  <name>广告</name>
  <tablename>tb_website_banner</tablename>
  <nolist>0</nolist>
  <searchcondition>r_main.status&lt;&gt;'D'</searchcondition>
  <description>系统相关的广告</description>
  <fields>
    <field>
      <name>序号</name>
      <key>seq</key>
      <type>number</type>
      <displayinlist>1</displayinlist>
      <gotodetail>1</gotodetail>
      <notnull>1</notnull>
      <disableindetail>0</disableindetail>
    </field>
    <field>
      <name>超链接</name>
      <key>link</key>
      <type>longtext</type>
    </field>
    <field>
      <name>aaa</name>
      <key>pic</key>
      <type>upload</type>
      <uploadmodule>banner</uploadmodule>
    </field>
    <field>
      <name>状态</name>
      <key>status</key>
      <type>select</type>
      <displayinlist>1</displayinlist>
      <options>
        <option>
          <name>启用</name>
          <value>A</value>
		  <default>1</default>
        </option>
        <option>
          <name>禁用</name>
          <value>I</value>
        </option>
      </options>
      <search>1</search>
      <notnull>1</notnull>
    </field>
  </fields>
  <options>
    <option>
      <name>新增</name>
      <type>function</type>
      <function>addNew()</function>
      <search>1</search>
      <detail>1</detail>
    </option>
    <option>
      <name>删除</name>
      <type>function</type>
      <function>btnDeleteInList()</function>
      <search>1</search>
    </option>
  </options>
</root>