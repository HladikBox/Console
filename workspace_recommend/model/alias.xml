<?xml version="1.0" encoding="utf-8" ?>
<root>
  <name>默认基础数据模型</name>
  <tablename>tb_notable</tablename>
  <nolist>0</nolist>
  <searchcondition>r_main.status&lt;&gt;'D' </searchcondition>
  <description>默认基础数据模型，用于快速新增</description>
  <fields>
    <field>
      <name>排序</name>
      <key>seq</key>
      <type>number</type>
      <displayinlist>1</displayinlist>
      <gotodetail>1</gotodetail>
	  <min>1</min>
	  <description></description>
    </field>
    <field>
      <name>名称</name>
      <key>name</key>
      <type>text</type>
      <displayinlist>1</displayinlist>
      <gotodetail>1</gotodetail>
      <search>1</search>
      <notnull>1</notnull>
	  <description></description>
    </field>
    <field>
      <name>简称</name>
      <key>summary</key>
      <type>longtext</type>
      <search>1</search>
      <notnull>1</notnull>
    </field>
    <field>
      <name>内容</name>
      <key>content</key>
      <type>html</type>
    </field>
    <field>
      <name>状态</name>
      <key>status</key>
      <type>select</type>
      <displayinlist>1</displayinlist>
      <options>
        <option>
          <name>启用</name>
          <value>A</value>
		  <default>1</default>
        </option>
        <option>
          <name>禁用</name>
          <value>I</value>
        </option>
      </options>
      <search>1</search>
      <notnull>1</notnull>
    </field>
  </fields>
  <options>
    <option>
      <name>新增</name>
      <type>function</type>
      <function>addNew()</function>
      <search>1</search>
      <detail>1</detail>
    </option>
    <option>
      <name>删除</name>
      <type>function</type>
      <function>btnDeleteInList()</function>
      <search>1</search>
    </option>
  </options>
</root>